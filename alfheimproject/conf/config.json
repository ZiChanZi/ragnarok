{
  // Server configuration
  "server": {
    "conf": {
      "debug": true, // Enable debug mode? (don't enable it in production)
      "server_name": "YourRO", // Your server name
      "server_ip": "127.0.0.1", // Server IP (used to check server status)
      "server_domain": "http://127.0.0.1:8000", // Server domain (must include http://)
      "login_port": 6900,
      "char_port": 6121,
      "map_port": 5121,
      "server_type": "RE", // Server type (RE / Pre-RE)
      "check_status": true, // Check server status? (true/false)
      "emu_type": "rathena" // Emulator type (rathena/hercules)
    },
    "rates": {
      "base_exp_rate": 1000,
      "job_exp_rate": 1000,
      "quest_exp_rate": 1000,
      "mvp_exp_rate": 100,
      "common": 1000,
      "common_boss": 500,
      "heal": 1000,
      "heal_boss": 500,
      "useable": 1000,
      "useable_boss": 500,
      "equip": 1000,
      "equip_boss": 500,
      "card": 500,
      "card_boss": 100,
      "mvp_item": 100
    },
    "other": {
      "default_map": "prontera",
      "default_x": 150,
      "default_y": 150
    }
  },
  "security": {
    "min_username_length": 4,
    "max_username_length": 24,
    "min_password_length": 4,
    "max_password_length": 32,
    "password_hasher": 1, // Password hasher (0 - plain text, 1 - bcrypt, 2 - md5)
    "bcrypt": {
      "rounds": 12,
      "prefix": "not used"
    },
    "email_verification": true, // Enable E-Mail verification after register? (true/false)
    "verification_key_expire": 7 // Verification key expire time (in days)
  },
  "emails": {
    "default_subject": "{server_name} user verification",
    "default_message": "Welcome to the {server_name}, {user}!"
  },
  "api": {
    "divine_pride": {
      "api_key": "none"
    },
    "discord": {
      "guild_id": 0
    }
  },
  "woe": [ // WoE schedule
    // Day of week, start time, day of week, end time
    // Sunday 12:00 - Sunday 13:00
    [0, "12:00", 0, "13:00"]
  ]
}